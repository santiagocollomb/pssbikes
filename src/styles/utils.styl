// SECTIONS 
.section-full
  padding 70px 0px
  height calc(100vh - 140px)
  background-size cover
  background-repeat no-repeat

.section-half
  padding 40px 0px

.section-small
  min-height calc(100vh - 60px)
  padding 30px 0px

.bg-bike-black
  background-image url('https://pssbikes.com/images/galeria/pss-2.2-3.jpg')
