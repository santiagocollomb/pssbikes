// SECTIONS 
.section-full
  padding 70px 0px
  height calc(100vh - 140px)
  background-size cover
  background-repeat no-repeat

.section-half
  min-height 100vh
  padding 40px 0px

.section-small
  min-height calc(100vh - 60px)
  padding 30px 0px

.bg-bike-black
  background-image url('https://pssbikes.com/images/galeria/pss-2.2-3.jpg')
  background-position right
  background-position top
  height 100vh
  background-size cover
  margin 0px !important
  width 100% !important

.bg-black
  background-color #1a1a1a

.bg-white
  background-color #fff

// TEXT
.title
  font-size calc(2em + 1vw)
  font-weight bold
  text-shadow 2px 2px 6px rgba(0,0,0,0.16)

.subtitle
  font-size calc(0.3em + 1vw)

.uppercase
  text-transform uppercase

.text-center
  text-align center !important

.text-bold
  font-weight bold

.text-regular
  font-weight 400

.text-white
  color #fff

.text-gray
  color #7a7a7a

.text-primary
  color color-primary

// POSITION
.center
  display block
  margin auto

.flex
  display flex

// WIDTH
