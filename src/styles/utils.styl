// BUTTON
.btn 
  color #293241
  padding 0.5rem 3rem
  font-size 0.8rem
  text-transform uppercase
  border-radius 4px
  font-weight 400
  display block
  cursor pointer
  border none
  background transparent
  text-align center
  text-decoration none
  box-shadow 1px 1px 10px rgba(0,0,0,0.15)
  transition all 300ms cubic-bezier(.57,.21,.69,1.25)

.btn:hover
  background-color rgba(0, 0, 0, 0.92)
  color #FFFDFD
  transform scale(1.05)

.btn.btn-black 
  background #fff
  color #000

.btn.btn-rounded
  border-radius 40px

/* PANTALLAS GRANDES */
