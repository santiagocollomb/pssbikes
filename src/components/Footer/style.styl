footer
  width 100vw
  position sticky
  bottom 0
  left 0
  display block
  width 100%
  padding 100px 0 0 0
  background #f7f7f7
  transition all .5s
  text-align center

  .container
    width 80%
    max-width 65rem

  .email 
    transition all 400ms cubic-bezier(.22,.68,0,1.11)
    background linear-gradient(to bottom, transparent 62%, #ed1c24 0) center center/0% 75% no-repeat
    font-size 2rem
    padding 0
    cursor pointer
    color #fff
    letter-spacing -.05em
    margin-bottom 35px
    display inline-block
    text-decoration none
    font-weight 100

    &:hover 
      background-size 100% 100%
      transform scale(1.05)
    
    &:active 
      background-size 80% 100%
    
    &-container 
      z-index 1
      position relative
      background-color #fff
      padding 60px
      box-shadow 0 0 90px 10px rgba(95, 124, 179, 0.15)

  .socials
    display flex
    margin-bottom 150px
    align-content center
    justify-content center

    .social-link
      padding 1rem 1.5rem
      transition all 400ms cubic-bezier(.22, .68, 0, 1.71)

      a
        text-decoration none
        color #fff
        display flex
        align-content center

        img
          width 1.4rem
          filter invert(1)
          margin-right 5px

        span
          color #fff
          display none

      &:hover
        transform scale(1.15)

  .down
    display flex
    justify-content space-between
    text-align left
    position relative
    z-index 1
    overflow visible

    a
      padding-right 0
      padding-left 5px

    h2
      font-size 0.9rem
      text-align center
      margin-top 0
      margin-bottom 1rem
      color #fff

      span
      strong
      a
        color #fff

      a
        font-size 0.8rem

@media only screen and (min-width: 60em)

  footer
    .container
      width 80%

    .email
      font-size 3rem
      text-align center
            
    .socials 
      .social-link 
        a 
          span
            display block
    .down
      h2
        text-align left