.bg-hero
  display flex
  height calc(100vh - 100px) !important

  .hero-content
    width 100%

    .hero-bike
      margin auto
      display block
      width 100%
      position relative
      bottom 0rem
      margin-top 40%
      z-index 2
    
    .hero-title
      position absolute
      top 0
      left 50%
      z-index 1
      text-transform uppercase

      h1.blend-title
        text-align center
        position relative
        margin-top 10rem
        left -50%
        color transparent
        font-size 20vw
        background linear-gradient(to top, rgba(255,255,255,0) 0%, #fff 60%)
        -webkit-background-clip text
        -webkit-background-clip text
        -moz-background-clip text
        background-clip text 

      h1.shadow-title
        text-align center
        position relative
        color #fff
        margin-top 0rem
        left -50%
        font-size 20vw
        text-shadow 0 2px 10px rgba(0,0,0,0.4)

  .decoration
    transform translateY(0px)
    width 100%
    height 100vh
    position absolute
    top 0
    left 0
    z-index 3

// ELECTRIC HERO

#electric
  .bg-hero
  
    .hero-content
      .hero-title-animation
        position relative
        z-index 3

      .hero-bike
        z-index 3

    .decoration
      z-index 0
      filter: contrast(0.7)
      transform: scale(1.3)

@media only screen and (min-width: 60em)
  .bg-hero
    display flex
    height calc(100vh - 300px) !important
    background-size cover
    width 100%

    .hero-content

      .hero-bike
        margin auto
        display block
        width 70%
        margin-top -4%

      .hero-title-animation
        transform translate3d(1px, 1px, 0px)

      .hero-title

        h1.blend-title
          margin-top 0
          font-size 8vw
          line-height 1

        h1.shadow-title
          margin-top 2rem 
          font-size 10vw
          line-height 1
