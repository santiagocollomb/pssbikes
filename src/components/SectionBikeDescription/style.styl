#bike-description 
  position relative
  z-index 3
  display flex
  min-height 100vh
  overflow hidden

  .bg-text
    position absolute
    font-size 25vw
    bottom 0%
    width 300%
    margin 0
    z-index 0
    color #131313
    text-transform uppercase
    text-shadow 2px 5px 15px rgba(0,0,0,0.48)
    transition all 400ms cubic-bezier(.22,.68,0,1.11)
    line-height 0.9
    
  .description-img
    position relative
    width 50%
    margin 30% auto auto 10%

  .description-content
    position absolute
    top 30%
    left 15%
    z-index 1
    text-transform uppercase

    h2
      text-align left
      position relative
      color #fff
      left 5%
      text-shadow 0 2px 10px rgba(0,0,0,0.4)

    p
      color #eee
      padding 0
      text-transform none
      &:before
        content ''
        margin-right 5%
        width 10%
        height 3px
        background #fff
        display inline-block

@media only screen and (min-width: 60em)
  #bike-description 
    .description-content
      left 40%

      p
        padding 0 20% 0 20%
    
    .description-img
      width 35%
      margin auto auto auto 10%