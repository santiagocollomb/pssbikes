#home
  background-position bottom

  .container
    max-width 80rem

  .btn
    display block
    margin auto

.home-content
  width 100%
  margin-top 40%

  .home-title
    z-index 1
    text-transform uppercase

    h1.shadow-title
      text-align center
      position relative
      color #000
      margin-top 10rem
      font-size 6vw
      text-shadow 0 2px 10px rgba(0,0,0,0.16)
      margin 0

    h2.shadow-subtitle
      text-align center
      line-height 1
      position relative
      color #363847
      margin-top 10rem
      left -50%
      font-size 8vw
      font-weight 400
      text-shadow 0 2px 10px rgba(0,0,0,0.4)
      margin 0

  .decoration
    transform translateY(0px)
    width 100%
    position absolute
    top 0
    left 0
    z-index 3

@media only screen and (min-width: 60em)
  #home
    .btn
      margin 0
    .container
      width 90%
      max-width 80rem

  .home-content
    margin-top 2em
    padding-left 4rem

    .home-title-animation
      transform translate3d(1px, 1px, 0px)

    .home-title
      width 100%

      h1.shadow-title
        margin-top 4rem 
        font-size 2.5rem
        text-align left
        line-height 1
        line-height 3.5rem
