@import url('https://use.typekit.net/uzw5lsb.css');


#home
  background-position center

  .decoration
    position absolute
    width 100%
    top 0
    z-index -1

  .home-bike
    position absolute
    left -60%
    top 30%
    width 150%
    z-index 1

  .container
    max-width 80rem

  .btn
    display block
    margin-left auto

.home-content
  width 100%
  margin-top 25%
  position relative
  z-index 2

  .home-title
    z-index 1
    text-transform uppercase

    .title-regular
      font-family effra, sans-serif
      font-weight 400
      font-style italic
      display block

    .title-bold
      font-family effra, sans-serif
      font-weight 700
      font-style italic
      display block

    .title-medium
      font-family effra, sans-serif
      font-weight 500
      font-style italic
      display block

    h1.shadow-title
      text-align right
      position relative
      color #fff
      margin-top 8rem
      font-size 2.3rem
      text-shadow 0 2px 10px rgba(0,0,0,0.16)
      margin 0

    h2.shadow-subtitle
      text-align center
      line-height 1
      position relative
      color #363847
      margin-top 10rem
      left -50%
      font-size 8vw
      font-weight 400
      text-shadow 0 2px 10px rgba(0,0,0,0.4)
      margin 0

  .decoration
    transform translateY(0px)
    width 100%
    position absolute
    top 0
    left 0
    z-index 3

@media only screen and (min-width: 60em)
  #home
    background-size cover

    .home-bike
      position absolute
      left 0
      top 10%
      width 50%

    .btn-container
      width 80%
      .btn
        margin-left auto
        margin-right 0

    .container
      width 90%
      max-width 80rem

  .home-content
    margin-top 2em
    padding-left 4rem

    .home-title-animation
      transform translate3d(1px, 1px, 0px)

    .home-title
      width 100%

      h1.shadow-title
        margin-top 4rem 
        font-size 4rem
        width 80%

        span
          line-height 1
          text-align right
