.bg-hero
  display flex
  height calc(100vh - 140px) !important

  .hero-content
    width 100%
    margin-top 40%

    .hero-bike
      margin auto
      display block
      width 100%
      position relative
      bottom 1rem
      z-index 2

    .hero-title
      position absolute
      top 0
      left 50%
      z-index 1
      text-transform uppercase

      h1.blend-title
        text-align center
        position relative
        margin-top 10rem
        left -50%
        color transparent
        font-size 20vw
        background linear-gradient(to top, rgba(255,255,255,0) 0%, #fff 60%)
        -webkit-background-clip text
        -webkit-background-clip text
        -moz-background-clip text
        background-clip text 

      h1.shadow-title
        text-align center
        position relative
        color #fff
        margin-top 10rem
        left -50%
        font-size 20vw
        text-shadow 0 2px 10px rgba(0,0,0,0.4)

  .decoration
    transform translateY(0px)
    width 100%
    height 100%
    position absolute
    top 0
    opacity 0.8
    z-index 3

@media only screen and (min-width: 60em)
  .bg-hero
    display flex
    height calc(100vh - 320px) !important
    background-size cover
    width 100%

    .hero-content
      margin-top 4em

      .hero-bike
        margin auto
        display block
        width 45%

      .hero-title

        h1.blend-title
          margin-top 10rem
          font-size 10vw
          line-height 1

        h1.shadow-title
          margin-top 10rem
          font-size 12vw
          line-height 1
