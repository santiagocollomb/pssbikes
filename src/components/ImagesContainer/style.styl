.images-container
  margin auto
  display grid
  grid-template-columns 30% 30% 30%
  height 100px
  column-gap 4%
  row-gap 20px

  .image-item
    width 100%
    box-shadow 1px 1px 3px rgba(0,0,0,0.5)
    cursor pointer
    transition all 400ms cubic-bezier(.22,.68,0,1.11)

    &:hover
      transform scale(1.05)  



@media only screen and (min-width: 60em)

  .images-container
    margin auto
    display grid
    height 150px
    grid-template-columns 30% 30% 30%
