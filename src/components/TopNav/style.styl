.top-nav
  position absolute
  top 0
  width 100%
  padding-top 4em
  display flex
  justify-content center
  z-index 4
    

  a.link
    text-decoration none
    letter-spacing 1px
    color #fff
    font-size 0.9rem
    font-weight 600
    transition all 400ms cubic-bezier(.22,.68,0,1.71)
    &:hover
      transform scale(1.1)

  .top-nav-social
    position absolute
    right 1rem

  img
    width 8em
    margin 0 6em
    transition all 400ms cubic-bezier(.22,.68,0,1.71)
    &:hover
      transform scale(1.1)


@media only screen and (min-width: 60em)
  .top-nav

    .top-nav-social
      right 2rem