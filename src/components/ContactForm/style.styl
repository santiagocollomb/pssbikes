#contacto
  box-shadow 2px 2px 10px rgba(0,0,0,0.3)
  .container
    width 80%
    margin auto
    margin-top 3rem

  h2
    color #fff

  h3
    width 100%
    font-weight 400
    color #fff

  form
    margin-top 2rem

    .input-group
      display block
      width 100%
      margin-bottom 1.5rem

      input
      textarea
        width 95%
        border none
        border-bottom 2px solid #ed1c24
        background transparent

      label
        color #FFF
        font-weight bold
        font-size 0.9rem
        display block

@media only screen and (min-width: 60em)
  #contacto
    h3
      width 80%

    .container
      width 80%
      margin-top 4rem

    h2.title
      font-size calc(2.5em + 1vw)

    h2.title-bike
      font-size calc(2em + 1vw)

    h3
      width 100%
      font-size calc(0.4em + 1vw)

    form
      margin-top 4rem

      .input-group
        display block
        width 90%
        margin-bottom 2rem

        input
        textarea
          width 100%
          border none
          border-bottom 2px solid #ed1c24

        label
          color #FFF
          font-weight bold
          font-size 0.9rem
          display block


